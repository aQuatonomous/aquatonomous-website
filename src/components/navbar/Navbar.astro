---
import Container from "@components/Container.astro";
import Link from "@components/ui/Link.astro";
import Dropdown from "./Dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

// Menu items for navbar
const navLinks = [
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Our Team",
    path: "/team",
  },
  {
    title: "ASV",
    path: "/asv",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contact",
    path: "/contact",
  },
  {
    title: "Search",
    path: "/search",
  },
];
---

<header class="backdrop-blur-sm border-b-2 py-4 z-20 relative w-full">
  <Container class="flex flex-col lg:flex-row justify-between items-center">
    <Astronav>
      <!-- Logo and mobile menu button -->
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <img
            src="/logos/GradientTextLogo.svg"
            alt="aQuatonomous logo"
            class="w-10 h-10 md:w-12 md:h-12"
          />
        </a>

        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>

      <!-- Main nav links -->
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0 font-mono lowercase">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {navLinks.map((link, index) => (
            <li>
              {link.children ? (
                <Dropdown
                  title={link.title}
                  children={link.children}
                  lastItem={index === navLinks.length - 1}
                />
              ) : (
                <a
                  href={link.path}
                  class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-AquaBlue"
                >
                  <span>{link.title}</span>
                </a>
              )}
            </li>
          ))}
        </ul>

        <!-- Optional mobile-specific button -->
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link
            href="/contact"
            class="bg-AquaBlue hover:bg-AquaBlue/80 transition duration-200 text-white px-3 py-1.5 rounded-md font-medium shadow-md text-sm"
          >
            Get in Touch
          </Link>
        </div>
      </MenuItems>
    </Astronav>

    <!-- Desktop CTA button -->
    <div class="hidden lg:flex items-center">
      <Link
        href="/contact"
        class="bg-AquaBlue hover:bg-AquaBlue/80 transition duration-200 text-white px-3 py-2 rounded-md font-medium shadow-md text-sm"
      >
        Get in Touch
      </Link>
    </div>

          
  </Container>
</header>
